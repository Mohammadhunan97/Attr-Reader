
<% if user_signed_in? %>

  <h1>signed in</h1>
  <ul>
    <% @books.each do |book| %>
      <li><%= book[:title] %> - <%= book[:author] %><br>
        ISBN: <%= book[:isbn] %> </li>
    <% end %>
  </ul>
  <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
    <a href="/search" >Search for book</a>
    <a href="/<%= @user %>" >Your profile</a>
    <a href="/<%= @user %>/add_a_book" >Add a book!</a>
    <a href="/<%= @user %>/book_list" >Your book list</a>
  <% end %>
<h1>hello!</h1>

<a href="/login" >login</a>
